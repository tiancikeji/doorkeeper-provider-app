
<div style="width:300px;">
<%= form_for(@user, :url => user_path(@user),:class=>"form-signin") do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email,:class=>"form-control" %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password ,:class=>"form-control"%>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation %>
    <div class="input">
      <%= f.password_field :password_confirmation ,:class=>"form-control"%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up and log in", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>
